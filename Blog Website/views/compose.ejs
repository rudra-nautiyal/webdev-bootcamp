<%- include('./partials/header'); -%>

<h1><b>Compose</b></h1>

<form action="/compose" method="POST" autocomplete="off">
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Title</label>
        <input type="text" class="form-control" name="postTitle">
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Post</label>
        <textarea class="form-control" name="postBody" rows="5"></textarea>
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Publish</button>
</form>

